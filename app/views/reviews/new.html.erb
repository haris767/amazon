<div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">  
  <main class="px-8 my-8 lg:flex-auto">
    <div>
      <h2 class="text-2xl font-semibold leading-7 text-gray-900">Add Review</h2>
    </div>

    <div class="mt-4 border border-gray-300 rounded-xl p-6 h-min">
      <%= render 'products/mini_product_item', product: @purchase.product %>

      <div class="relative py-6 mt-4">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-gray-300"></div>
        </div>
      </div>

      <div class="max-w-96">
        <%= form_with url: purchase_reviews_path do |f| %>

          <div class="flex flex-col py-4">
            <%= f.label :content, class:'block text-sm font-medium leading-6 text-gray-900' %>
            <%= f.text_area :content, class:'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
          </div>

          <div data-controller="rating">
            <%= render :partial => 'reviews/rating_item', :locals => {:f => f, category_rating: "fivestar_rating"} %>
            <%= render :partial => 'reviews/rating_item', :locals => {:f => f, category_rating: "fourstar_rating"} %>
            <%= render :partial => 'reviews/rating_item', :locals => {:f => f, category_rating: "threestar_rating"} %>
            <%= render :partial => 'reviews/rating_item', :locals => {:f => f, category_rating: "twostar_rating"} %>
            <%= render :partial => 'reviews/rating_item', :locals => {:f => f, category_rating: "onestar_rating"} %>
            
          </div>

          <%= f.submit "Submit Review", class:"cursor-pointer mt-4 flex items-center justify-center rounded-md border border-transparent bg-primary " %>
        <% end %>

