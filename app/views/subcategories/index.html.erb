<div class="relative w-full">
  <%= image_tag 'banner.jpg', class: "w-full h-48 object-cover" %>
  <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-40">
    <h1 class="text-white text-3xl font-bold">Essentials for <%= @category.name %></h1>
  </div>
</div>
<div class=" inset-0 flex items-center justify-center">
 <h1 class="text-black text-3xl font-bold">Feature Categories</h1>
</div>
<div class=" grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6" style="padding-top: 60px;">
  <% @subcategories.each do |sub| %>
   <%= link_to subcategory_products_path(sub) do%>
    <div class=" flex flex-col items-center bg-white shadow-lg p-5 rounded-lg transition-transform duration-300 hover:scale-105" 
    style="cursor: pointer;">
      <% if sub.image.attached? %>
        <%= image_tag sub.image, class: "w-36 h-36 object-cover rounded-lg shadow-sm" %>
      <% else %>
        <div class="w-36 h-36 flex items-center justify-center bg-gray-200 rounded-lg">
          <p class="text-gray-500">No image</p>
        </div>
      <% end %>

      <p class="mt-3 text-gray-800 text-base font-semibold text-center"><%= sub.name %></p>
    </div>
  <% end %>
  <% end %>
</div>
