<div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">
  <%= render 'shared/owner_sidebar' %>
  
  <main class="px-8 my-8 lg:flex-auto">
    <div>
      <h2 class="text-2xl font-semibold leading-7 text-gray-900">purchases & Payments</h2>
    </div>

    <div class="flex flex-col mt-4">
    <% @purchases.each do |purchase| %>
      <div class="mt-4 border border-gray-300 rounded-xl p-6 h-min">
        <div class="flex justify-between">
          <%= render 'products/mini_product_item', product: purchase.product %>
        </div>

        <div class="relative py-6">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-300"></div>
          </div>
        </div>

        <div>
          <h3 class="text-xl font-medium text-gray-900">Purchase details</h3>
          <div class="flex justify-between font-light mt-6">
            <p>Purchased by</p>
            <%#this lines means purchase have a user have a profile have a name %>
            <p class="font-medium"><%= purchase.user.profile.name %> (<%= purchase.user.email %>) </p>
          </div>
          <div class="flex justify-between font-light mt-6">
            <p>Quantity</p>
            <p class="font-medium"><%= purchase.quantity %></p>
          </div>
        </div>

        <div class="relative py-6">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-300"></div>
          </div>
        </div>

        <div>
          <h3 class="text-xl font-medium text-gray-900">Price details</h3>
          <div class="flex justify-between font-light mt-6">
            <p><%= humanized_money_with_symbol(purchase.product.price) %> </p>
            
          </div>
       
        </div>

        <div class="relative py-6">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-300"></div>
          </div>
        </div>
        <div class="flex justify-between font-medium">
          <p>Total</p>
          <p><%= humanized_money_with_symbol(purchase.product_payment.total_price) %></p>
        </div>
      </div>
    <% end %>
    </div>
  </main>
</div>