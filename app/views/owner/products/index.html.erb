<div class="mx-auto max-w-7xl lg:flex lg:gap-x-16 lg:px-8">
  <%= render 'shared/owner_sidebar' %>
  
  <main class="px-8 my-8 lg:flex-auto">
    <div>
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-semibold leading-7 text-gray-900">products</h2>
        <%= link_to 'Add product', new_owner_product_path, class:'cursor-pointer mt-2 flex items-center justify-center rounded-md border border-transparent bg-primary ' %>
      </div>
      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
        <% @products.each do |product| %>
          <div class="flex flex-col">
            <%= render 'products/product_item', product: product, minimal_details: false %>
            <%= link_to 'Edit', edit_owner_product_path(product), class:'cursor-pointer mt-2 flex items-center justify-center rounded-md border border-primary text-primary px-8 py-2 text-base font-medium hover:text-white hover:bg-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2' %>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>