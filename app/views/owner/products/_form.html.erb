<div class="px-8 py-8 border rounded-md lg:flex-auto my-8">
  <div>
    <h2 class="text-base font-semibold leading-7 text-gray-900">product Information</h2>

    <%= form_with model: @product, url: path, class:'mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6' do |f| %>
    <div class="flex space-x-4">
      
      <div class="sm:col-span-3" style="padding-left:5px;">
        <%= f.label :price, class:'block text-sm font-medium leading-6 text-gray-900' %>
        <%= f.text_field :price, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
      </div>
      </div>
      <div class="col-span-full">
        <%= f.label :headline, class:'block text-sm font-medium leading-6 text-gray-900' %>
        <%= f.text_field :headline, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
      </div>

      <div class="col-span-full">
        <%= f.label :description, class:'block text-sm font-medium leading-6 text-gray-900' %>
        <%= f.rich_text_area :description, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
      </div>

      <div class="flex space-x-4">
       
      <!-----flex space-x-4 div end-------->
    </div>

     <div class="flex space-x-4">

      <div class="sm:col-span-2"  style="padding-left:5px;"> 
        <%= f.label :country, class:'block text-sm font-medium leading-6 text-gray-900' %>
        <%= f.country_select :country_code, class: 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6' %>
      </div>
      </div>
      <div class="col-span-full">
        <%= f.submit "Save", class:"save-btn cursor-pointer mt-2 flex items-center justify-center rounded-md border border-transparent bg-primary " %>
      </div>
    <% end %>
    
  </div>
</div>