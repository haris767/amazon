
   <div class="grid ">
    <!-- Review Stats -->
    <section aria-labelledby="delivery-stats" class="col-span-2 pt-10 pb-10">
     
    <button data-action="click->modal#toggleModal" type="button" class="relative rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
    <span class="absolute -inset-2.5"></span>
    <span class="sr-only">Close panel</span>
    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
    <!-- Header -->
    <div class="flex justify-between items-center">
      <h2 class="text-lg font-semibold">Choose your location</h2>
      
    </div>

    

    <!-- Sign-in Button -->
     <% if user_signed_in? %>
           <!-- Description -->
    <p class="text-sm text-gray-600 mt-2">
      Delivery options and delivery speeds may vary for different locations
    </p>
        <% else %>
        <!-- Description -->
    <p class="text-sm text-gray-600 mt-2">
      Sign in before selecting location of delivery
    </p>
            <%= link_to "Sign in", new_user_session_path, class: "block w-full bg-yellow-500 text-black font-bold py-2 rounded-md", role: "menuitem", tabindex: "-1" %>
            <p class="text-xs mt-1">New customer? <%= link_to "Start here.", new_user_registration_path, class: "text-blue-600" %></p>
        <% end %>
<!-- Delivery Location Modal -->
<div data-controller="delivery"> 
  <div class="mt-4 text-center text-gray-500">or enter a US zip code</div>

  <div class="mt-2 flex">
   <input id="zip-code-input" type="text" placeholder="Enter zip code"
  class="border p-2 w-full rounded-l-md focus:ring focus:ring-yellow-300"
  data-action="input->delivery#updateCountryByZip"
  data-delivery-target="zipInput">  <!-- âœ… This must exist! -->

        
    <button id="apply-zip-button" 
      class="bg-gray-200 px-4 rounded-r-md hover:bg-gray-300" 
      data-action="click->delivery#updateCountryByZip">Apply</button>
  </div>



 <%= form_with url: subcategory_product_path(@product.subcategory, @product), method: :post, local: false do |f| %>
  <!-- Country Selection -->
  <div class="mt-4 text-center text-gray-500">or ship outside the US</div>
  <%= f.country_select :country, { default: 'US' }, { class: 'border p-2 w-full rounded-md mt-2',
   data: { delivery_target: "countrySelect", action: "change->delivery#updateDeliveryLocation"} } %>
<% end %>
  </div>

    <!-- Done Button -->
    <button data-action="click->modal#toggleModal"
    class="bg-yellow-400 w-full py-2 mt-4 font-semibold rounded-md hover:bg-yellow-500">
      Done
    </button>
  </div>
</div>
</section>
</div>
